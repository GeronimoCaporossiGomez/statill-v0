{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "esnext",             // ✅ compatible con Angular 17+ y lazy loading
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",             // ✅ moderno y aceptado por TypeScript
    "useDefineForClassFields": false,
    "lib": ["esnext", "dom"]        // ✅ bibliotecas para JS moderno + navegador
  },
  "exclude": ["node_modules", "dist"]
}
